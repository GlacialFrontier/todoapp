<h1>Create A New To Do</h1>

<% if @todo.errors.any? %>
  <h2>The following errors prevented your Todo from being Saved:</h2>
  
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @todo do |f| %>
  <p>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  
  <P>
    <%= f.submit %>
  </P>

<% end %>